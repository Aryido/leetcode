package leetcodePratice;

public class exercise2_Leetcode344_Reverse_String {

	/*
	Write a function that takes a string as input and returns the string reversed.
	Example: Given s = "hello", return "olleh".
	*/
	
	/*
	 * solution1
	 */
	public static void reverseString1(String string) {
		String[] stringArray = string.split("");
		StringBuilder sb = new StringBuilder();
		for(int i=stringArray.length-1;i>=0;i--) {
			System.out.println(stringArray[i]);
			sb.append(stringArray[i]);
		}
		System.out.println(sb);
	}
	

	/*
	 * solution2
	 * 字串反轉時，直接把最前面和最後面字對調，可以節省一半迴圈時間
	 */
	public static void reverseString2(String string) {
		String[] stringArray = string.split("");
		StringBuilder sb = new StringBuilder();
		for(int i=0, max=(stringArray.length)/2;i<max;i++) {
			
		}
		
	}
	
	
	
	
	
	public static void main(String[] args) {
		
		String s="hello";
		reverseString1(s);
		
	}

}
