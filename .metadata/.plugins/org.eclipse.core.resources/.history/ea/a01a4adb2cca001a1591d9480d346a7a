package leetcodePratice;

import java.util.Arrays;

public class exercise6_LeetCode242_Vaild_Anagram {

	/*
	 	Given two strings s and t, write a function to determine if t is an anagram of s.
		For example,
		s = "anagram", t = "nagaram", return true.
		s = "rat", t = "car", return false.
		Note:
		You may assume the string contains only lowercase alphabets.
	 */
	
	
	/**
	 * 使用API，有一個方法是toCharArray，
	 * 
	 */
	public static Boolean anagramFuntion(String prototypeStrng, String string) {
		//字長度不一樣 一定非重組字
		if(prototypeStrng.length()!=string.length()) {
			return false;
		}
		
		//API
		char[] charPrototype = prototypeStrng.toCharArray();
		char[] charString = string.toCharArray();
		
		Arrays.sort(charPrototype);
		Arrays.sort(charString);
		
		return String.valueOf(charPrototype).equals(String.valueOf(charString));
	}
	
	
	public static void main(String[] args) {
		anagramFuntion("rat", "cat");

	}

}
