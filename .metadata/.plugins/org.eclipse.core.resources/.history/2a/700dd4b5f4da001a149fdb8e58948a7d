package leetcodePratice;

public class exercise30_LeetCode28_Implement_String {

	/*
	 	Return the index of the first occurrence of needle in haystack, or -1 if needle is not part of haystack.

		Example 1:
				Input: haystack = "hello", needle = "ll"
				Output: 2
		
		Example 2:
				Input: haystack = "aaaaa", needle = "bba"
				Output: -1
	 */
	
	//	不管效能直接做
	public static int strStr(String haystack, String needle) {
        int ans=0;
        
        String[] array1 = haystack.split("");
        String[] array2 = needle.split("");
        
        int startIndex=0;
        int index=0;
        
        L2:
        while(index!=-1) {
        	index = haystack.indexOf(array2[0],startIndex);
        	if(index==-1) {
        		ans=0;
        		break;
        	}
        	
            for(int j=0,i=index+j;j<array2.length;j++) {
            	if(!array1[i].equals(array2[j])) {
            		ans=0;
            		break;
            	}
            	if(j==array2.length-1) {
            		ans=index;
            		break L2;
            	}
            }
            
            startIndex=index+1;
        }
        
        System.out.println(ans);
		return ans;
    }
	
	public static void main(String[] args) {
		strStr("aaaaa", "bba");

	}

}
